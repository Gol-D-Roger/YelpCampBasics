
<% include ../partials/header.ejs%>
<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a new campground</h1>
      <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%=campground.id%>/update" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="name" value="<%=campground.name%>" placeholder="Name of the bootcamp" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" value="<%=campground.image%>" placeholder="Image URL" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="description" value="<%=campground.description%>" placeholder="A little Description" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="price" value="<%=campground.price%>" placeholder="Price per night($)" required>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Go Back</a>
      </div>
  </div>
</div>
<% include ../partials/footer.ejs%>
